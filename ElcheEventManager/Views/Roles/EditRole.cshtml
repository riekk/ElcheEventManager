@using ElcheEventManager.Models

@model ApplicationUser

@{
    ViewBag.Title = "Editar Rol";
}

<h2>Editar Rol de @Model.UserName</h2>

@using (Html.BeginForm("EditRole", "Roles", new { userId = ViewBag.userId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Seleccionar Rol:")
        @Html.DropDownList("roleName", (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "form-control" })
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Guardar" class="btn btn-outline-dark" />
        @Html.ActionLink("Cancelar", "UserList", null, new { @class = "btn btn-outline-dark" })
    </div>
}
