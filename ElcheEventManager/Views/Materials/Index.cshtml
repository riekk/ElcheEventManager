@model IEnumerable<ElcheEventManager.Models.db.Material>

@{
    ViewBag.Title = "Lista Materiales";
}

<h2>Lista Materiales</h2>

<p>
    @Html.ActionLink("Nuevo Material", "Create", null, new { @class = "btn btn-outline-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class="btn btn-outline-dark"} ) 
            @*@Html.ActionLink("Details", "Details", new { id=item.id })*@ 
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
